---
import { SITE, NAV_LINKS } from "../consts";
const year = new Date().getFullYear();
---

<footer class="bg-surface-100 dark:bg-surface-900 border-t border-surface-200 dark:border-surface-700">
  <div class="section-container py-12 md:py-16">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-2 font-display font-bold text-lg mb-4">
          <span
            class="w-8 h-8 rounded-lg bg-brand-600 text-white flex items-center justify-center text-sm font-bold"
            aria-hidden="true"
          >
            AS
          </span>
          {SITE.title}
        </a>
        <p class="text-sm text-muted max-w-xs">
          Enterprise Architecture & AI Adoption Consulting.
          Helping organizations build resilient, future-ready systems.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="font-display font-semibold mb-4">Navigation</h3>
        <ul class="space-y-2">
          {NAV_LINKS.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted hover:text-brand-600 dark:hover:text-brand-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="font-display font-semibold mb-4">Connect</h3>
        <ul class="space-y-2 text-sm text-muted">
          <li>
            <a
              href={SITE.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors"
            >
              LinkedIn
            </a>
          </li>
          <li>
            <a
              href={`mailto:${SITE.email}`}
              class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors"
            >
              {SITE.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-6 border-t border-surface-200 dark:border-surface-700 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-muted">
      <p>&copy; {year} {SITE.title}. All rights reserved.</p>
      <div class="flex gap-4">
        <a href="/privacy" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">
          Privacy Policy
        </a>
        <a href="/legal" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">
          Legal Notice
        </a>
      </div>
    </div>
  </div>
</footer>
