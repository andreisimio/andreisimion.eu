---
const stats = [
  { value: "20+", label: "Years Experience" },
  { value: "10+", label: "Enterprise Projects" },
  { value: "5", label: "Service Areas" },
  { value: "4", label: "Case Studies" },
];
---

<section class="bg-brand-950 dark:bg-surface-900 py-12">
  <div class="section-container">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="text-center animate-on-scroll">
          <p class="text-3xl md:text-4xl font-display font-bold bg-gradient-to-r from-brand-400 to-accent-400 bg-clip-text text-transparent mb-1">
            {stat.value}
          </p>
          <p class="text-sm text-surface-300 dark:text-surface-400 font-medium">
            {stat.label}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
